makeMP(value, class)
  .p
    &r-{class}, &x-{class}
      padding-right value
    &l-{class}, &x-{class}
      padding-left value
    &t-{class}, &y-{class}
      padding-top value
    &b-{class}, &y-{class}
      padding-bottom value
    &-{class}
      padding value

  .m
    &r-{class}, &x-{class}
      margin-right value
    &l-{class}, &x-{class}
      margin-left value
    &t-{class}, &y-{class}
      margin-top value
    &b-{class}, &y-{class}
      margin-bottom value
    &-{class}
      margin value

makeWH(value, class)
  .w, .wh
    &-{class}
      width value
  .h, .wh
    &-{class}
      height value

makeEm(value, class)
  .em-{class}
    font-size round(value, 1)

makeSize(value, class)
  .size-{class}
    font-size value


makeClasses(class='')
  .text
    &-{class}right
      text-align right
    &-{class}left
      text-align left
    &-{class}center
      text-align center
    &-{class}justify
      text-align justify
    &-{class}upper
      text-transform uppercase
  .img
    &-{class}fluid
      max-width 100%
      height auto
  .mp-{class}0
    margin 0
    padding 0


makeLayer(value, class)
  .layer-{class}
    position relative
    z-index value


makeFloat(class)
  .float-{class}left
    float left
  .float-{class}right
    float right
  .float-{class}none
    float none
  .clear{class}
    &:before
      content ''
      display block
      clear both


makeHelperForMedia(media)
  makeClasses(media)
  makeMP((i * 1px), media+i) if i % 5 is 0 for i in (0..100)
  makeMP(auto, media+'auto')
  makeWH((i * 1%), media+i) if i % 5 is 0 for i in (0..100)
  makeWH(auto, media+'auto')
  for i in (1..100)
    makeEm((i * 0.1em), media+i)
    makeSize((i * 1px), media+i)
    makeLayer(i, media+i)
  makeFloat(media)


makeHelperForMedia('')